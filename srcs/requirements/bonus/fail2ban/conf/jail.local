[sshd]
enabled = false

[vsftpd]
enabled = true
port = ftp,ftp-data,ftps,ftps-data
logpath = /var/log/ftp/vsftpd.log
bantime = 3m
failregex = ^.*FTP response: Client "<HOST>".*"530.*"$
action = iptables[name=VSFTPD, port=ftp, protocal=tcp]

